page{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #26ACF5;
}

.intem-contain{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width:604rpx;
  height:80vh;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(238,238,238,1);
  box-shadow:0rpx 0rpx 25rpx 0rpx rgba(11,110,164,0.1);
  border-radius:20rpx;
}
.item-head{
  margin: 0 auto;
  display: flex;
  width: 524rpx;
  height: 187rpx;
  flex-direction: column;
  align-items: center;
  position: relative;
  justify-content: space-between;
}
.bg{
  position: absolute;
  width: 524rpx;
  height: 187rpx;
  top: 0;
  left: 0;
}
.userphoto{
  width: 140rpx;
  height: 140rpx;
  margin-top: -100rpx;
  border-radius: 50%;
  box-shadow: -1px 0 10px #ccc, 1px 0 10px #ccc, 0 -1px 10px #ccc, 0 1px 10px #ccc;
}
.user-info{
line-height: 42rpx;
height:42rpx;
font-size:36rpx;
font-family:SourceHanSansCN-Bold;
font-weight:bold;
color:rgba(51,51,51,1);
}
.time{
height:28rpx;
margin-top: 20rpx;
line-height: 28rpx;
font-size:16px;
font-family:SourceHanSansCN-Light;
font-weight:300;
color:rgba(153,153,153,1);
}
.item-body{
margin: 0 auto;
  height: 150rpx;
  width: 80%;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #ccc;
  box-shadow: -1px 0 5px #ccc, 1px 0 5rpx #ccc, 0 -1px 5rpx #ccc, 0 1px 5rpx #ccc;
}
.item-body image{
  width:66rpx;
  height: 66rpx;
}
.item-body text{
height:30rpx;
font-size:32rpx;
font-family:SourceHanSansCN-Regular;
font-weight:400;
color:rgba(38,172,245,1);
line-height:37rpx;
}
.item-foot{
  width: 573rpx;
  height: 471rpx;
}
.item-foot image{
  width: 573rpx;
  height: 471rpx;
}